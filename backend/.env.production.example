# Production Environment Configuration for Backend
# Copy this file to .env.production and fill in your values

# ===========================================
# Server Configuration
# ===========================================
PORT=3020
NODE_ENV=production
FRONTEND_URL=https://yourdomain.com

# ===========================================
# Database Configuration (MySQL)
# ===========================================
DB_HOST=your-mysql-host
DB_PORT=3306
DB_USER=your-mysql-user
DB_PASSWORD=your-mysql-password
DB_NAME=portfolio

# ===========================================
# Database Configuration (MongoDB)
# ===========================================
MONGODB_URI=mongodb://your-mongodb-host:27017/portfolio_analytics
MONGODB_NAME=portfolio_analytics

# ===========================================
# JWT Configuration
# ===========================================
# Generate secure secrets: openssl rand -base64 64
JWT_SECRET=your-production-jwt-secret-min-64-chars
JWT_REFRESH_SECRET=your-production-refresh-secret-min-64-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Cloudinary Configuration
# ===========================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# Email Configuration (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-app-specific-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Portfolio Website

# ===========================================
# Admin Configuration
# ===========================================
# Set secure admin credentials for initial setup
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure-admin-password-change-me

# ===========================================
# Security Configuration
# ===========================================
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate limiting (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=combined
