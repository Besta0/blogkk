# Server
PORT=3000
NODE_ENV=development

# MySQL Database (for structured data: users, posts, projects, etc.)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=portfolio

# MongoDB Database (for unstructured data: analytics, logs, files)
MONGODB_URI=mongodb://localhost:27017/portfolio_analytics

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m

# Cloudinary (optional - for image uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email (optional - for contact form and password reset)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@example.com

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5060
