{
  "name": "portfolio-backend",
  "version": "2.0.1",
  "description": "Backend API for dynamic portfolio website",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "dev:watch": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:db": "ts-node src/scripts/test-db-connection.ts",
    "init:admin": "ts-node src/scripts/init-admin.ts",
    "seed": "ts-node src/scripts/seed-data.ts",
    "seed:clear": "ts-node src/scripts/seed-data.ts --clear",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "keywords": [
    "portfolio",
    "api",
    "express",
    "typescript",
    "mysql"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.52.0",
    "@types/better-sqlite3": "^7.6.13",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongodb-memory-server": "^11.0.1",
    "mongoose": "^9.1.5",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.11.0",
    "nodemailer": "^7.0.12",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.6",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.10",
    "@types/nodemailer": "^7.0.5",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "fast-check": "^4.5.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1",
    "sqlite3": "^5.0.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
